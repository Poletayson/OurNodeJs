<%include baseUp.ejs%>



        <div id="content-wrapper" class="myColorElem" >

            <div class="row">
                <span class="lg-col-12 sm-col-4 h1 ml-4"><%= product.title%></span>
            </div>

            <div class="row bg-white m-3 p-2">

                <div class="d-inline col-md-4 col-sm-12">

                    <img src="<%= product.img%>" alt="Example" class="img-fluid"/>

                </div>

                <div class="d-inline col-md-8 col-sm-12">
                    <div class="row-centered">
                        <div class="sm-col-12 lg-col-8 mx-auto">
                            <input type="checkbox" checked id="hd-1" class="hide"/>
                            <label for="hd-1" class="h3">Характеристики</label>
                            <div class="row">

                                <form name="test" action= "<%= product._id%>/save" method="post">
                                <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Картинка</label>

                                <div class="col-sm-12">
                                    <input class="form-control form-control-sm" name="img"  id="img" value="<%= product.img%>">
                                </div>


                                <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Название</label>

                                <div class="col-sm-12">
                                    <input class="form-control form-control-sm" name="title" id="title" value="<%= product.title%>">
                                </div>

                                <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Код товара</label>
                                <div class="col-sm-12">
                                    <input class="form-control form-control-sm" name="code"  id="code" placeholder="000000" value="<%= product.code%>">
                                </div>

                                <label for="colFormLabelSm" class="col-sm-5 col-form-label col-form-label-sm">Количество на складе</label>
                                <div class="col-sm-12">
                                    <input class="form-control form-control-sm" name="balance"  id="balance" placeholder="0" value="<%= product.balance%>">
                                </div>

                                <label for="colFormLabelSm" class="col-sm-5 col-form-label col-form-label-sm">Описание товара</label>
                                <div class="col-sm-12">
                                    <textarea name="description"  id="description" class="form-control text-justify"  rows="5"><%= product.description%></textarea>
                                </div>

                                <div class="col-sm-12 text-center">
                                        <input type="submit" class="btn btn-success my-2" name="name" value="Применить" />


                                </div>
                                </form>
                            </div>
                            <br/>



                        </div>
                    </div>

                </div>
            </div>


            <!-- /.content-wrapper -->
        </div>




        <script src="/javascripts/product.js"></script>





<%include baseDown.ejs%>
